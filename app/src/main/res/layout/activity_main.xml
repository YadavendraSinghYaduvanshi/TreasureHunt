<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#0066a4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/geotag_title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2162a9"
            android:gravity="center_vertical"
            android:text="LOGIN"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="37"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/upnup">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:visibility="invisible"
        android:weightSum="100"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="36"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"></ImageView>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:background="#2162a9"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"></ImageView>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="76"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:visibility="gone"></ImageView>

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="8"
                    android:background="@drawable/login_txt"
                    android:visibility="invisible"></ImageView>

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"></ImageView>

                <TextView
                    android:id="@+id/username_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:text="Username"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible"></ImageView>

                <EditText
                    android:id="@+id/login_usertextbox"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="13"
                    android:background="@drawable/txtbox_bg"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColorHint="#333"
                    android:textSize="14dp"></EditText>

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"></ImageView>

                <TextView
                    android:id="@+id/password_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:text="Password"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible"></ImageView>

                <EditText
                    android:id="@+id/login_locktextbox"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="13"
                    android:background="@drawable/txt_box_b_ico"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColorHint="#333"
                    android:textSize="14dp"></EditText>

                <ImageView
                    android:id="@+id/imiw"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"></ImageView>

                <LinearLayout
                    android:id="@+id/imagddiw"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="13"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/login_loginbtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"

                        android:background="@drawable/loginbutton"
                        android:textColor="#000"
                        android:textStyle="bold"></Button>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"></ImageView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="36"
            android:background="@drawable/eema_logo"
            android:visibility="invisible" />

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:background="@drawable/eema_logo"
            android:visibility="invisible" />

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:background="@drawable/eema_logo"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/eventpartners" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:weightSum="100">

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="36"
            android:background="@drawable/eema_logo"
            android:visibility="invisible" />

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:background="@drawable/eema_logo"
            android:visibility="invisible" />

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:background="@drawable/eema_logo"
            android:visibility="invisible" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/eema_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:weightSum="100">

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="36"
            android:background="@drawable/eema_logo"
            android:visibility="invisible" />

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:background="@drawable/eema_logo"
            android:visibility="invisible" />

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:background="@drawable/eema_logo"
            android:visibility="invisible" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/eema_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"
            android:background="@drawable/eema_logo"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>